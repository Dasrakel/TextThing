<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/LightRetro">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minHeight="12dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/wTextApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:padding="1dp"
        android:text="* C64 BASIC V2 *"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="7dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/wContentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/wTextApp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="4dp">

        <!--click.dummer.textthing.CustomTextView
            android:id="@+id/wContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/DarkRetro"
            android:padding="0dp"
            android:text="..."
            android:textColor="@color/colorPrimary"
            custom:fonttype="c64pro_mono"
            android:textSize="12sp" / -->
        <TextView
            android:id="@+id/wContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/DarkRetro"
            android:fontFamily="monospace"
            android:padding="0dp"
            android:text="..."
            android:textStyle="bold"
            android:drawingCacheQuality="low"
            android:textColor="@color/colorPrimary"
            android:textSize="10dp" />
    </LinearLayout>

</RelativeLayout>
