<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyWidgetProvider"
    android:background="@color/MiddleNight">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minHeight="12dp"
        android:background="@color/MiddleNight" />

    <TextView
        android:id="@+id/wTextApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="monospace"
        android:padding="1dp"
        android:text="Notes"
        android:textColor="@color/LightNight"
        android:textSize="8dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/wContentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/wTextApp"
        android:background="@color/DarkNight"
        android:orientation="vertical"
        android:padding="2dp">

        <TextView
            android:id="@+id/wContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/DarkNight"
            android:fontFamily="monospace"
            android:padding="0dp"
            android:text="..."
            android:textColor="@color/LightNight"
            android:textSize="8dp" />
    </LinearLayout>

</RelativeLayout>
