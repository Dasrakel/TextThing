<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/LightPanther">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minHeight="12dp"
        android:background="@color/MiddlePanther" />

    <TextView
        android:id="@+id/wTextApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="monospace"
        android:padding="1dp"
        android:text="Notes"
        android:textColor="@color/DarkPanther"
        android:textSize="8dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/wContentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/wTextApp"
        android:background="@color/LightPanther"
        android:orientation="vertical"
        android:padding="4dp">

        <ImageView
            android:id="@+id/wContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/DarkPanther"
            android:padding="0dp"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>
